{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "clang build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++11",
        "-g",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${workspaceFolder}/program.out"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
